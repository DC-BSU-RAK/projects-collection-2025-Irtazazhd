<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="true">

            <ImageView
                android:id="@+id/detailWatchImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="@drawable/rounded_bg"
                android:contentDescription="Watch Image"
                android:src="@drawable/rolex1" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/detailWatchName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rolex Watch Name"
            android:textColor="#212121"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp"/> <TextView
        android:id="@+id/detailWatchPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AED 0.00" android:textColor="#00796B" android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/> <TextView
        android:id="@+id/detailWatchDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is a detailed description of the Rolex watch. It highlights its features, history, and why it's a coveted timepiece. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
        android:textColor="#424242"
        android:textSize="17sp"
        android:lineSpacingExtra="6dp"
        android:justificationMode="inter_word"
        android:layout_marginBottom="32dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quantity:"
            android:textColor="#212121"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/editTextQuantity"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:inputType="number"
            android:hint="Enter quantity (e.g., 1)"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/edit_text_bg_refined"
            android:textColorHint="#9E9E9E"
            android:textColor="#000000"
            android:textSize="17sp"
            android:layout_marginBottom="32dp"/>

        <Button
            android:id="@+id/buttonBuy"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Add to Cart"
            android:backgroundTint="#00838F"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="15dp"
            android:elevation="6dp" />

    </LinearLayout>
</ScrollView>